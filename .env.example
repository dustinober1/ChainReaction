# ChainReaction Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Neo4j Database Configuration
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# =============================================================================
# LLM Configuration (for DSPy and LangGraph)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# News API Configuration (Scout Agent)
# =============================================================================
# Tavily API (recommended for agent-based search)
TAVILY_API_KEY=your_tavily_api_key_here

# NewsAPI (alternative source)
NEWS_API_KEY=your_newsapi_key_here

# =============================================================================
# Application Configuration
# =============================================================================
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key

# =============================================================================
# Monitoring Configuration
# =============================================================================
# How often the Scout Agent should check for new events (in seconds)
MONITOR_INTERVAL=300

# Maximum events to process per monitoring cycle
MAX_EVENTS_PER_CYCLE=50

# Confidence threshold for risk event extraction
CONFIDENCE_THRESHOLD=0.7
