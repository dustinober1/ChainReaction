# ChainReaction Environment Configuration
# Copy this file to .env and update values

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# Secret key for token signing (generate with: openssl rand -base64 32)
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# Default API key for development (change in production!)
API_KEY=dev-api-key-12345

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Neo4j Database
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# OpenAI API (for DSPy analysis)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# News APIs
# =============================================================================
# Tavily API for web search
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# NewsAPI for news articles
NEWS_API_KEY=your-newsapi-key-here

# =============================================================================
# Scout Agent Configuration
# =============================================================================
# Monitoring interval in seconds
MONITOR_INTERVAL=300

# Maximum events to process per cycle
MAX_EVENTS_PER_CYCLE=50

# Minimum confidence threshold
CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# Optional: Webhook Configuration
# =============================================================================
# Default webhook timeout in seconds
WEBHOOK_TIMEOUT=30

# Maximum retry attempts
WEBHOOK_MAX_RETRIES=3

# =============================================================================
# Optional: Email Notifications
# =============================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-username
# SMTP_PASSWORD=your-password
# SMTP_FROM=alerts@example.com
